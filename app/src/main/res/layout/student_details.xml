<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical"
	android:background="#000000">

	<ImageView
		android:layout_width="120dp"
		android:layout_height="120dp"
		android:layout_marginTop="40dp"
		android:id="@+id/student_detailsProfileImage"
		android:layout_centerHorizontal="true"
		android:src="@drawable/profile_image_demo"/>

	<TextView
		android:layout_width="120dp"
		android:layout_height="20dp"
		android:layout_below="@+id/student_detailsProfileImage"
		android:layout_marginTop="10dp"
		android:text="Student Name"
		android:id="@+id/student_detailsName"
		android:layout_centerHorizontal="true"
		android:textStyle="bold"
		style="@style/AppTheme"
		android:gravity="center_horizontal"
		android:textColor="#FFFFFF"/>

	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_centerHorizontal="true"
		android:layout_below="@+id/student_detailsName"
		android:text="This is dummy text mainly focus to share student details in this page.   no problem, whatever you do input, result will be constant!"
		android:layout_marginLeft="50dp"
		android:id="@+id/student_detailsBio"
		android:layout_marginRight="50dp"
		android:layout_marginTop="10dp"
		android:textColor="#FFFFFF"
		android:maxHeight="100dp"/>

	<ImageView
		android:layout_width="40dp"
		android:layout_height="40dp"
		android:layout_alignParentBottom="true"
		android:layout_marginBottom="40dp"
		android:id="@+id/student_detailsSocialLink"
		android:layout_marginRight="100dp"
		android:layout_alignParentRight="true"
		android:src="@drawable/facebook_logo"/>

	<ImageView
		android:layout_width="40dp"
		android:layout_height="40dp"
		android:id="@+id/student_detailsShowCode"
		android:layout_alignParentBottom="true"
		android:layout_marginBottom="40dp"
		android:layout_marginLeft="100dp"
		android:layout_alignParentLeft="true"
		android:src="@drawable/njpollob_logo"/>

</RelativeLayout>

